<UserControl x:Class="Sussex.Flip.UI.ConditionalFrame"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Background="Purple">
	
	<Grid 
	x:Name="grid">
		
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition/>
			<RowDefinition/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
	
		<TextBlock
		Grid.Row="0"
		Grid.Column="0"
		Text="Only say this line if..."
		FontSize="24"
		Height="60"
		Width="400"
		Foreground="White"/>	
	
		<StackPanel
		Grid.Row="2"
		Grid.Column="0"
		Orientation="Horizontal">
		
			<Button
			x:Name="saveButton"
			Content="Save"/>
		
			<Button
			x:Name="cancelButton"
			Content="Cancel"/>
		
		</StackPanel>
	
	</Grid>
</UserControl>