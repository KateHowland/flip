<flipui:MoveableSlot x:Class="Sussex.Flip.UI.ConditionSlot"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:flipui="clr-namespace:Sussex.Flip.UI">
	
	<Grid>
		
		<Grid.Resources>
			
			<LinearGradientBrush 
			x:Key="paleRedGradient"
			StartPoint="0,0"
			EndPoint="1,1">
				<LinearGradientBrush.GradientStops>
					<GradientStop Offset="0" Color="Firebrick"/>
					<GradientStop Offset="0.5" Color="IndianRed"/>
					<GradientStop Offset="1" Color="Firebrick"/>
				</LinearGradientBrush.GradientStops>
			</LinearGradientBrush>
			
		</Grid.Resources>	
		
		<Grid.RowDefinitions>
			<RowDefinition MinHeight="70"/>
		</Grid.RowDefinitions>
   		<Grid.ColumnDefinitions>
			<ColumnDefinition MinWidth="110"/>
		</Grid.ColumnDefinitions>
		
	    <Border
		x:Name="border"
	    Grid.Row="0"
	    Grid.Column="0"
	    Background="{StaticResource paleRedGradient}"
	    VerticalAlignment="Stretch"
	    HorizontalAlignment="Stretch"
	    BorderThickness="1"
		Grid.ZIndex="2"/>
	
	</Grid>

</flipui:MoveableSlot>