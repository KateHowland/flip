<Window x:Class="Sussex.Flip.Games.NeverwinterNightsTwo.Nwn2FlipWindow"
	xmlns="http://schemas.microsoft.com/netfx/2007/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="Building blocks" 
    Width="800"
    Height="600" 
	AllowDrop="False"
	>	
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="150"/>
		</Grid.ColumnDefinitions>
			
		<Canvas	
		Name="mainCanvas"
		Grid.Row="0"
		Grid.Column="0" 
		Background="LightBlue"
		AllowDrop="True"/>
		
		<StackPanel 
		Name="blockBox"
		Grid.Row="0"
		Grid.Column="1"
		Orientation="Vertical"
		Background="DarkGray"
		AllowDrop="True"/>
	
	</Grid>
</Window>