<flipui:ConditionalControl x:Class="Sussex.Flip.UI.IfControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:flipui="clr-namespace:Sussex.Flip.UI">
	
	<flipui:ConditionalControl.Resources>
	
		<Style x:Key="textBlockStyle">
			<Setter Property="TextBlock.FontSize" Value="20"/>
			<Setter Property="TextBlock.FontWeight" Value="Bold"/>
			<Setter Property="TextBlock.FontFamily" Value="Courier"/>
			<Setter Property="TextBlock.Foreground" Value="Green"/>
			<Setter Property="TextBlock.Background" Value="Black"/>
			<Setter Property="TextBlock.Height" Value="30"/>
			<Setter Property="TextBlock.HorizontalAlignment" Value="Stretch"/>
		</Style>
	
	</flipui:ConditionalControl.Resources>

	<Border
	BorderThickness="2"
	BorderBrush="Black">
		
		<Grid
		x:Name="grid"
		Background="MediumSeaGreen">
			
			<Grid.RowDefinitions>
				<RowDefinition/>
				<RowDefinition/>
				<RowDefinition/>
				<RowDefinition/>
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition/>
			</Grid.ColumnDefinitions>
		
			<TextBlock
			Grid.Row="0"
			Grid.Column="0"
			Text="if..."
			Style="{StaticResource textBlockStyle}"/>
		
			<TextBlock
			Grid.Row="2"
			Grid.Column="0"
			Text="then..."
			Style="{StaticResource textBlockStyle}"/>
		
		</Grid>
	
	</Border>	

</flipui:ConditionalControl>