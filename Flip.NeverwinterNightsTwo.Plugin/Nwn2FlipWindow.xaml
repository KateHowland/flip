<Window x:Class="Sussex.Flip.Games.NeverwinterNightsTwo.Nwn2FlipWindow"
	xmlns="http://schemas.microsoft.com/netfx/2007/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="Building blocks" 
    Width="800"
    Height="600" 
	AllowDrop="False"
	>	
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="250"/>
		</Grid.ColumnDefinitions>
			
		<Canvas	
		Name="mainCanvas"
		Grid.Row="0"
		Grid.Column="0" 
		Background="LightBlue"
		AllowDrop="True">
		
			<Button Canvas.Bottom="20" Canvas.Left="20">Refresh</Button>
		
		</Canvas>
					
		<TabControl 
		Name="tabs"
		Grid.Row="0"
		Grid.Column="1"
		Drop="DroppedOnBlockBox">
				
			<TabItem Header="Actions">	
		
				<StackPanel
				Name="ActionsPanel"
				Orientation="Vertical"
				Background="DarkBlue"
				AllowDrop="True"/>
			
			</TabItem>
		
			<TabItem Header="Other">
							
				<StackPanel
				Name="OtherObjectsPanel"
				Orientation="Vertical"
				Background="Gray"
				AllowDrop="True"/>
			
			</TabItem>
			
		</TabControl>	
	</Grid>
</Window>