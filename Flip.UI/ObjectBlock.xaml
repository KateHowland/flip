<flipui:Moveable x:Class="Sussex.Flip.UI.ObjectBlock"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:flipui="clr-namespace:Sussex.Flip.UI"
	DataContext="{Binding RelativeSource={RelativeSource Self}}">
	
	<flipui:Moveable.Resources>
		<Image x:Key="defaultimg" Source="images/imagemissing.bmp"/>
	</flipui:Moveable.Resources>
	
		    <Border
			BorderThickness="0.5"
			BorderBrush="SlateGray">
		    	
		    	<Grid>		    		
		    	<Grid.RowDefinitions>
		    		<RowDefinition/>
		    		<RowDefinition Height="10"/>
		    		<RowDefinition Height="10"/>
		    	</Grid.RowDefinitions>
		    	<Grid.ColumnDefinitions>
		    		<ColumnDefinition/>
		    	</Grid.ColumnDefinitions>
			    	
				    <Label    	
		    		Grid.Row="0"
				    Grid.Column="0"
			    	Content="{Binding DisplayImage}"
			    	Padding="0"
			    	/>	    		
		    	
		    		<TextBlock
		    		Grid.Row="1"
				    Grid.Column="0"
		    		Text="{Binding Path=Behaviour.DisplayName}"
		    		Background="AntiqueWhite"
		    		Foreground="DarkBlue"
		    		FontSize="8"
		    		/>   		
		    	
		    		<TextBlock
		    		Grid.Row="2"
				    Grid.Column="0"
		    		Text="{Binding Path=Behaviour.Identifier}"
		    		Background="AntiqueWhite"
		    		Foreground="DarkRed"
		    		FontSize="8"
		    		/>
		    	
		    	</Grid>			
			</Border>	

</flipui:Moveable>